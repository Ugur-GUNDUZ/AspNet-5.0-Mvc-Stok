@using MvcStok.Models.entity
@model List<TblMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        aranacak müşteri adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<a href="/Musteri/YeniMusteri/" class="btn btn-primary" style="margin-bottom:10px;">Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri İd</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var i in Model)
        {
        <tr>
            <td>@i.MusteriId</td>
            <td>@i.MusteriAd</td>
            <td>@i.MusteriSoyad</td>
            <td><a href="/Musteri/Sil/@i.MusteriId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Musteri/Guncelle/@i.MusteriId" class="btn btn-success">Guncelle</a></td>
        </tr>
        }
    </tbody>
</table>
